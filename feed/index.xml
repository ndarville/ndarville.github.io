---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.name }}</title>
		<description>{{ site.description }}</description>
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		{% for post in site.posts limit:10 %}
			<item>
				<title>{{ post.title }}</title>
				<description>
					<p><i>(The charts in this post will not be viewable in a feed reader, since loading and executing JavaScript is required.)</i></p>

					<hr />

					{{ post.content | xml_escape }}
				</description>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ site.url }}{{ post.url | remove:".html" }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url | remove:".html" }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
